<section>
  <div class="grid">
    <div>
      <article>
        <h3 class="text-center">
          <%= @post.title %>
          </h3></article>
    </div>
  </div>

  <div class="grid text-right">
    <small>
      <strong>
        <i><%= @post.estimated_reading_time %></i>
      </strong>
    </small>
  </div>

  <% if  @post.embeded_video.present? %>
    <div class="grid">
      <div>
        <%= @post.embeded_video.html_safe %>
      </div>
    </div>
  <% end %>

  <% if @post.attachment.attached? && @post.audio? %>
    <h3 class="text-left">üéß √Åudio</h3>
    <div class="grid">
      <div>
        <%= audio_tag(polymorphic_path(@post.attachment), controls: true) %>
      </div>
    </div>
  <% end %>
</section>

<section>
  <div class="grid">
    <div>
      <p>
        <%= @post.content %>
      </p>
    </div>
  </div>
</section>
