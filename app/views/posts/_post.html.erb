<article>
  <%= link_to post_path(post)  do %>
    <h3>
      <%= post.title %>
    </h3>
  <% end %>

  <p>
    <%= post.content.to_plain_text.slice(0, 80) %> ...
  </p>

  <footer class="flex">
    <div>
      <p>
         <%= image_tag 'logo.jpeg', { class: 'avatar', alt: "Marcus Pereira" } %>
        <span class="author"><%= post.user.profile.fullname %> â€¢ <%= I18n.l(post.created_at, format: :shortdate).titleize %></span>
      </p>
    </div>

    <div>
      <p>
        <mark>
          <%= post.category.name %>
        </mark>
      </p>
    </div>
  </footer>
</article>
